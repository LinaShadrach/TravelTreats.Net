@model TravelTreats.Models.Experience
@{
    ViewData["Title"] = "TravelTreats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Edit an Experience</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ExperienceId)

    @Html.LabelFor(model => model.Description, "Description: ")
    @Html.EditorFor(model => model.Description)

    @Html.LabelFor(model => model.LocationId, "Location: ")
    @Html.DropDownList("LocationId")

    @Html.LabelFor(model => model.MealTypeId, "Type of food: ")
    @Html.DropDownList("MealTypeId")

    <input type="submit" value="Update" />
}
@Html.ActionLink("back to list", "Index")